<% if user_signed_in? %>
    <span>Привіт, <%= current_user.email %></span>
    <%= link_to 'Вийти', destroy_user_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Ввійти', new_user_session_path %> або <%= link_to 'Зареєструватись', new_user_registration_path %>
<% end %>

<h1>Library Of Life</h1>
<h2>Your Books</h2>

<%= form_tag books_author_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search]%>
	<%= submit_tag "Search" %>
<% end %>

<table>
	<thread>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th colspan ="3"></th>
		</tr>
	</thread>

	<tbody>
		<% @book.each do |book| %>
			<tr>
			<td><%= book.title %></td>
			<td><%= book.description %></td>
			<td><%= link_to 'Show', book %></td>
        	<td><%= link_to 'Edit', edit_book_path(book) %></td>
        	<td><%= link_to 'Destroy', book, method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<%= link_to 'All Books', books_path %>
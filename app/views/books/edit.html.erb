<%= form_with scope: :book, url: book_path, method: :put, local: true do |form| %>
    <%= @book.errors.to_a %>
      <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </p>
    
      <p>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
      </p>
    
      <p>
        <%= form.submit "Edit" %>
      </p>
    <% end %>
    <%= link_to 'All Books', books_path %>
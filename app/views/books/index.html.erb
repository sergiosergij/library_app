<h1>Books</h1>

<table>
	<thread>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th colspan ="3"></th>
		</tr>
	</thread>

	<tbody>
		<% @book.each do |book| %>
			<tr>
			<td><%= book.title %></td>
			<td><%= book.description %></td>
			<td><%= link_to 'Show', book %></td>
        	<td><%= link_to 'Edit', edit_book_path(book) %></td>
        	<td><%= link_to 'Destroy', book, method: :delete %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>

<h1>All Books</h1>

<%= form_tag books_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search]%>
	<%= submit_tag "Search" %>
<% end %>

<table>
	<thread>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th colspan ="3"></th>
		</tr>
	</thread>

	<tbody>
		<% @books.each do |book| %>
			<tr>
			<td><%= book.title %></td>
			<td><%= book.description %></td>
			<td><%= link_to 'Show', book %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%if current_user.user_type == "author" %>
	<span class ='btn btn-outline-primary'><%= link_to 'Your books', author_books_path %></span>
<%end%>

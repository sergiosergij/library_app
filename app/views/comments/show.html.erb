<h1>Comment#show</h1>
<%= params.inspect %>
<h4>Book</h4>
<h5><%= @comment.book.title %>
<h4>Comment</h4>
<h5><%= @comment.comment %></h5>
<h6>User</h6>
<h6><%= @comment.user.email %></h6>

<%= link_to "Back", :back %>

<% if current_user.id == @comment.user_id %>
<%= link_to "Edit", edit_book_comment_path(@comment) %>
<%= link_to "Destroy", book_comment_path(@comment), method: :delete, style: 'color:#e60000;' %>
<% end %>

<span class ='btn btn-outline-primary'><%= link_to "All Books", books_path %></span>